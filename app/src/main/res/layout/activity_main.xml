<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidstudio.datetimepickers.MainActivity"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_word"
        android:textSize="@dimen/text_size"/>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" >
    <Button
        android:id="@+id/button_date"
        android:layout_marginTop="@dimen/button_top_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:onClick="showDatePickerDialog"/>

    <Button
        android:id="@+id/button_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:onClick="showTimePickerDialog"
        android:layout_alignBaseline="@+id/button_date"
        android:layout_alignBottom="@+id/button_date"
        android:layout_toRightOf="@+id/button_date"
        android:layout_toEndOf="@+id/button_date"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />
    </RelativeLayout>

</LinearLayout>